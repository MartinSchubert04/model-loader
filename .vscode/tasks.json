{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-g",
        "-std=c++17",
        "-I${workspaceFolder}/include",
        "-I${workspaceFolder}/resources",
        "-I${workspaceFolder}/src",
        "-L${workspaceFolder}/lib",
        "${file}",
        "${workspaceFolder}/src/glad.c",
        "-lglfw3dll",
        "-o",
        "${workspaceFolder}/${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:/msys64/ucrt64/bin/g++.exe"
    },
    {
      "label": "Clean EXE files",
      "type": "shell",
      "command": "Remove-Item -Path *.exe -Force",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "none"
      }
    },
    {
      "label": "build openGL",
      "type": "shell",
      "command": "${workspaceFolder}/build.bat",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
